# See https://wiki.hyprland.org/Configuring/Variables/

input {
    kb_layout = us
    follow_mouse = 1
    repeat_rate = 50
    repeat_delay = 300

    touchpad {
        natural_scroll = yes
	clickfinger_behavior = true
	tap-to-click = true
	disable_while_typing = true
    }

    sensitivity = 0.5
    force_no_accel = 0
    numlock_by_default = true
}

